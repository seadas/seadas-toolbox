<?xml version="1.0" encoding="UTF-8"?>
<izpack:processing version="5.0"
                   xmlns:izpack="http://izpack.org/schema/processing"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://izpack.org/schema/processing http://izpack.org/schema/5.0/izpack-processing-5.0.xsd">

    <!-- optional: duplicate console output to a logfile -->
    <!-- <logfiledir>$INSTALL_PATH</logfiledir> -->

    <job name="Archive .seadas (unix)" condition="archiveDotSeaDAS">
        <os family="unix"/>
        <executefile name="$INSTALL_PATH/bin/archiveDotSeaDAS.sh" workingDir="$INSTALL_PATH/bin"/>
    </job>

    <job name="Archive .seadas (mac)" condition="archiveDotSeaDAS">
        <os family="mac"/>
        <executefile name="$INSTALL_PATH/bin/archiveDotSeaDAS.sh" workingDir="$INSTALL_PATH/bin"/>
    </job>

    <job name="Archive .seadas (windows)" condition="archiveDotSeaDAS">
        <os family="windows"/>
        <executefile name="$INSTALL_PATH/bin/archiveDotSeaDAS_windows.bat" workingDir="$INSTALL_PATH/bin"/>
    </job>

    <onFail    previous="true"  next="false"/>
    <onSuccess previous="true"  next="true"  condition="mycondition"/>
    <onSuccess previous="false" next="true"  condition="!mycondition"/>

    <job name="Create Symbolic Link (mac)" final="true">
        <os family="mac"/>
        <executefile
                name="$INSTALL_PATH/bin/seadas.app/Contents/MacOS/createSymLink.sh"
                workingDir="$INSTALL_PATH/bin/seadas.app/Contents/MacOS/"/>
    </job>
</izpack:processing>
