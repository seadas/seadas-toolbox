<izpack:userinput xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:izpack="https://github.com/izpack/izpack.github.com/blob/master/schema/5.0"
                  version="5.0"
                  xsi:schemaLocation="https://github.com/izpack/izpack.github.com/blob/master/schema/5.0/izpack-installation-5.0.xsd">

      <panel id="userInputPanel4Run">
          <field type="check" variable="checkSelection.1">
                <spec txt="Run SeaDAS after Install" id="runSeaDASAfterInstallCheckBox" true="on" false="off" set="true"/>
          </field>
          <field type="check" variable="checkSelection.2">
              <spec txt="Remove the existing .seadas directory" id="removeDotSeaDASDir" true="true" false="false" set="false"/>
          </field>

          <field type="radio" variable="radioSelection">
              <description txt="This is a description for radio buttons" id="description.radio"/>
              <spec>
                  <choice txt="Delete .seadas" id="radio.label.1" value="1 selected" />
                  <choice txt="Archive .seadas" id="radio.label.2" value="2 selected" set="true" />
q          </spec>
          </field>

      </panel>


    <panel id="finish">
        <field type="check" variable="checkSelection.1">
            <spec txt="Run SeaDAS after Install" id="runSeaDASAfterInstall" true="true" false="false" set="false"/>
        </field>
        <field type="staticText" align="left" txt="Welcome to SeaDAS Install" id="welcome1"/>
        <field type="text" variable="welcome2">
            <spec txt="Enjoy!" id="welcome2" size="25" set=""/>
        </field>
        <field type="check" variable="checkSelection.2">
            <spec txt="Remove the existing .seadas directory" id="removeDotSeaDASDir" true="true" false="false" set="false"/>
        </field>

        <field type="radio" variable="radioSelection">
            <description txt="This is a description for radio buttons" id="description.radio"/>
            <spec>
                <choice txt="remove .seadas9" id="radio.label.1" value="1 selected" />
                <choice txt="archive .seadas9" id="radio.label.2" value="2 selected" set="true" />
            </spec>
        </field>

    </panel>

</izpack:userinput>
